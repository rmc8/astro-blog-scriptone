---
import LanguagePicker from "@/components/i18n/LanguagePicker.astro";
import { getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<header
    class="fixed top-0 left-0 w-full bg-white shadow-md flex justify-between items-center px-4 pt-2 pb-1 z-50"
>
    <h1 class="text-xl font-bold"><a href="/">Scriptone</a></h1>

    <nav class="flex space-x-4">
        <LanguagePicker />
        <span class="text-gray-400">|</span>
        <a href="/" class="text-gray-600 hover:text-gray-900">HOME</a>
        <a href=`/blog/${lang}` class="text-gray-600 hover:text-gray-900"
            >BLOG</a
        >
        <a href="/about" class="text-gray-600 hover:text-gray-900">ABOUT</a>
    </nav>
</header>

<style>
    header {
        background-color: var(--bg2);
    }
</style>
