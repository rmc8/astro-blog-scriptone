---
type Skill = {
    name: string;
    iconPath: string;
    url: string;
    type: "Lang" | "Framework";
};

const skills: Skill[] = [
    {
        name: "Astro",
        iconPath: "/skill/astro.svg",
        url: "https://astro.build",
        type: "Framework",
    },
    {
        name: "Python",
        iconPath: "/skill/python.svg",
        url: "https://www.python.org",
        type: "Lang",
    },
    {
        name: "TypeScript",
        iconPath: "/skill/typescript.svg",
        url: "https://www.typescriptlang.org",
        type: "Lang",
    },
    {
        name: "Svelte",
        iconPath: "/skill/svelte.svg",
        url: "https://svelte.dev",
        type: "Framework",
    },
    {
        name: "Tauri",
        iconPath: "/skill/tauri.svg",
        url: "https://tauri.app",
        type: "Framework",
    },
    {
        name: "TailwindCSS",
        iconPath: "/skill/tailwindcss.svg",
        url: "https://tailwindcss.com",
        type: "Framework",
    },
    {
        name: "LangChain",
        iconPath: "/skill/langchain.svg",
        url: "https://www.langchain.com",
        type: "Framework",
    },
    {
        name: "LangGraph",
        iconPath: "/skill/langgraph.svg",
        url: "https://www.langchain.com/langgraph",
        type: "Framework",
    },
    {
        name: "Flutter",
        iconPath: "/skill/flutter.svg",
        url: "https://flutter.dev",
        type: "Framework",
    },
    {
        name: "FastAPI",
        iconPath: "/skill/fastapi.svg",
        url: "https://fastapi.tiangolo.com",
        type: "Framework",
    },
    {
        name: "Ollama",
        iconPath: "/skill/ollama.svg",
        url: "https://ollama.ai",
        type: "Framework",
    },
];
---

<ul class="flex flex-wrap list-none p-0">
    {
        [...skills]
            .sort((a, b) => {
                if (a.type === b.type) {
                    return a.name.localeCompare(b.name);
                }
                return a.type === "Lang" ? -1 : 1;
            })
            .map((skill) => (
                <li class="skill-item flex items-center mr-2 mb-2 px-2.5 py-0.5 border border-gray-300 rounded-full bg-[var(--bg2)] hover:bg-[var(--accent1)] active:bg-[var(--accent3)] text-black hover:text-white active:text-white duration-300 transform hover:scale-105 active:scale-95">
                    <a href={skill.url} class="flex items-center no-underline">
                        <img
                            src={skill.iconPath}
                            alt={skill.name}
                            class="w-5 h-5 mr-1"
                        />
                        {skill.name}
                    </a>
                </li>
            ))
    }
</ul>

<style>
    .skill-item {
        opacity: 0;
        transform: translateY(20px);
        animation: skillFadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards !important;
    }

    .skill-item:nth-child(1) {
        animation-delay: 1s !important;
    }
    .skill-item:nth-child(2) {
        animation-delay: 1.05s !important;
    }
    .skill-item:nth-child(3) {
        animation-delay: 1.1s !important;
    }
    .skill-item:nth-child(4) {
        animation-delay: 1.15s !important;
    }
    .skill-item:nth-child(5) {
        animation-delay: 1.2s !important;
    }
    .skill-item:nth-child(6) {
        animation-delay: 1.25s !important;
    }
    .skill-item:nth-child(7) {
        animation-delay: 1.3s !important;
    }
    .skill-item:nth-child(8) {
        animation-delay: 1.35s !important;
    }
    .skill-item:nth-child(9) {
        animation-delay: 1.4s !important;
    }
    .skill-item:nth-child(10) {
        animation-delay: 1.45s !important;
    }
    .skill-item:nth-child(11) {
        animation-delay: 1.5s !important;
    }
    .skill-item:nth-child(12) {
        animation-delay: 1.55s !important;
    }
    .skill-item:nth-child(13) {
        animation-delay: 1.6s !important;
    }
    .skill-item:nth-child(14) {
        animation-delay: 1.65s !important;
    }
    .skill-item:nth-child(15) {
        animation-delay: 1.7s !important;
    }

    @keyframes skillFadeIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
