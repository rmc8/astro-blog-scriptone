---
import Layout from "@/layouts/Base.astro";
import BlogLangList from "@/components/blog/BlogLangList.astro";
---

<Layout title="404 Not Found - Scriptone">
    <div class="pb-4">
        <h2 class="text-3xl font-bold mb-4">404 Not Found</h2>
        <ul>
            <li
                class="lang-list__item border border-gray-400 rounded-lg p-2 m-1 w-18 text-center hover:bg-[var(--accent1)] hover:text-white duration-300"
            >
                <a href="/" class="lang-list__link"> HOME </a>
            </li>
        </ul>
    </div>
    <div class="py-4">
        <h3 class="text-2xl font-bold mb-4">Blog</h3>
        <BlogLangList isVertical={false} />
    </div>
</Layout>
